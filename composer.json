{
    "name": "seatplus/web",
    "description": "Web frontend of seatplus",
    "license": "MIT",
    "authors": [
        {
            "name": "Felix Huber",
            "email": "felix.a.huber@gmx.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Seatplus\\Web\\": "src/",
            "Seatplus\\Web\\Database\\Factories\\": "database/factories"
        },
        "files": [
            "./src/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Seatplus\\Web\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0",
        "laravel/socialite": "^5.0",
        "seatplus/eveapi": "^3.0",
        "seatplus/auth": "^3.0",
        "tightenco/ziggy": "^1.0.4",
        "spatie/laravel-permission": "^5.4",
        "conedevelopment/i18n": "^1.1",
        "doctrine/dbal": "^3.0",
        "inertiajs/inertia-laravel": "^0.6.9"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "nunomaduro/collision": "^7.0",
        "rector/rector": "^0.17.1",
        "driftingly/rector-laravel": "^0.17.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Seatplus\\Web\\WebServiceProvider"
            ]
        }
    },
    "scripts": {
      "test": "vendor/bin/pest",
      "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage",
      "parallel": "vendor/bin/testbench package:test --parallel --no-coverage"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
